@model ITAssessmentSystem.Models.RUBRICS_DATA
    <td colspan="8">
        @using (Ajax.BeginForm("SaveRubric", "Rubric", new AjaxOptions { UpdateTargetId = Model.RUBRIC_ROWID.ToString() }))
{

    <table class="table fixedTable">
        <tr>
            <td>
                @Html.HiddenFor(model => model.RUBRIC_ROWID)
                @Html.TextAreaFor(model => model.OUTCOMES, new { @cols = 5, @rows = 1 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.PERFORMANCE_INDICATOR, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.TOPIC, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.POOR, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.DEVELOPING, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.DEVELOPED, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                @Html.TextAreaFor(model => model.EXEMPLARY, new { @cols = 20, @rows = 4 })
            </td>
            <td>
                <input type="submit" value="Save" class="btn btn-default" />
                @Ajax.ActionLink("Cancel", "EditCancel", "Rubric", new { rowID = Model.RUBRIC_ROWID }, new AjaxOptions
           {
               UpdateTargetId = @Model.RUBRIC_ROWID.ToString(),
               HttpMethod = "GET"
           },
           new { @class = "btn btn-primary" })
            </td>
        </tr>
    </table>
}
    </td>



