@model IEnumerable<ITAssessmentSystem.Models.spINSTRUCTORGETALLRECORDS_Result>

@{
    ViewBag.Title = "All Instructors";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<h2>AllInstructors</h2>

<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PROF_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PROF_EMAILID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteRecord", "Instructor", new { email = item.PROF_EMAILID }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PROF_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PROF_EMAILID)
                </td>
                <td>
                    @Html.ActionLink("EditRecord", "Edit", new { email = item.PROF_EMAILID }, new { @class = "btn btn-primary" }) |

                    <input type="submit" value="Delete" class="btn btn-danger" onclick=" confirmdelete();" />


                </td>
            </tr>
        }
    }

</table>

<script>
    function confirmDelete() {
        var reply = confirm("Are you sure?");
        if (reply)
            return true;
        else
            return false;
    }

</script>
