@model ITAssessmentSystem.Models.spINSTRUCTORGETDETAILS_Result

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<h2>Edit Instructor's Details</h2>


@using (Html.BeginForm("EditRecord", "Instructor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Instructor Information</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Label("Instructor Email ID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.INSTRUCTOR_EMAILID)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Instructor Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.INSTRUCTOR_NAME)
                @Html.ValidationMessageFor(model => model.INSTRUCTOR_NAME)
            </div>
        </div>

        @Html.HiddenFor(model => model.INSTRUCTOR_EMAILID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AllInstructors")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
