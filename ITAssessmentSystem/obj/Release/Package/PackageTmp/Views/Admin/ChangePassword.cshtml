@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
}

<h2>ChangePassword</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-horizontal">

        @Html.Hidden("UserName", HttpContext.Current.User.Identity.Name)
        <div class="form-group">
            @Html.Label("Existing Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("ExistingPassword")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("New Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("NewPassword")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Confirm Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("ConfirmPassword")
            </div>
        </div>

        <input type="submit" value="Change" class="btn btn-primary" />
    </div>
}

